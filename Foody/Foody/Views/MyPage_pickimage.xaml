                <Button x:Name="btnsuiv" HorizontalOptions="Start" BackgroundColor="#0086C4" FontAttributes="Bold" TextColor="White" />
                <Button x:Name="btnback" HorizontalOptions="EndAndExpand" TextColor="White" FontAttributes="Bold" BackgroundColor="#0086C4" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
